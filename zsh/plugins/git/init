#! zsh

export GIT_AUTHOR_NAME="${FULLNAME}"
export GIT_AUTHOR_EMAIL="${EMAIL}"
export GIT_COMMITTER_NAME="${FULLNAME}"
export GIT_COMMITTER_EMAIL="${EMAIL}"

# Various git scripts

function gitize()
{
  if [ ${#} -ne 0 ]; then
    message="${*}"
  else
    message="Initial commit"
  fi

  git init && \
    git add . && \
    git commit -a -m "${message}" && \
    git gc
}

if has hub; then
  function git() { hub "$@"; }
fi
