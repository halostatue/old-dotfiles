#!/bin/sh 

if [ -z "$1" ]; then
  echo "usage: $0 <app> [ Preferences | <document> ]"
else
  app=`ls -1td ~/Library/Application\ Support/iPhone\ Simulator/User/Applications/*/$1.app`
  dir=`dirname "$app"`
  if [ "$2" = "Preferences" ]; then
    open "$dir/Library/Preferences"
  else
    open "$dir/Documents/$2"
  fi
fi
