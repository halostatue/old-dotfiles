#autoload -U

zmodload zsh/mathfunc

if [ ${#} -eq 1 ]; then
  jot ${1}
elif [ ${#} -eq 2 ]; then
  jot - ${1} ${2}
elif [ ${#} -eq 3 ]; then
  local n1=${1}
  local st=${3}
  local n2=${2}

  if [ $(( int(${st}) == ${st} )) -eq 0 ]; then
    [ $(( int(${n2}) == ${n2} )) -eq 1 ] && n2=${n2}.0
  fi

  jot - ${n1} ${n2} ${st}
fi
